{
  "name": "withoutalone-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "db:migrate": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "seed:test-users": "tsx scripts/create-test-users.ts",
    "server:dev": "npm run db:migrate && npm run db:seed && npm run dev --workspace=apps/server",
    "server:build": "npm run build --workspace=apps/server",
    "server:start": "npm run start --workspace=apps/server",
    "server:lint": "npm run lint --workspace=apps/server",
    "client:dev": "npm run dev --workspace=apps/client",
    "client:build": "npm run build --workspace=apps/client",
    "client:start": "npm run start --workspace=apps/client",
    "client:lint": "npm run lint --workspace=apps/client"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/js-cookie": "^3.0.6",
    "@types/passport-strategy": "^0.2.38",
    "@types/qs": "^6.14.0",
    "@types/range-parser": "^1.2.7",
    "@types/send": "^0.17.5",
    "@types/serve-static": "^1.15.8",
    "prisma": "^5.22.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.20.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "ioredis": "^5.7.0",
    "js-cookie": "^3.0.5",
    "zustand": "^5.0.7"
  },
  "overrides": {
    "eslint-import-resolver-typescript": "3.10.1"
  }
}
